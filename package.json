{
	"name": "api-mock-runner",
	"version": "0.0.0",
	"description": "Create mocks servers with its schemas",
	"main": "src/index.js",
	"bin": "src/index.js",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist-types/index.d.ts",
			"default": "./src/index.js"
		}
	},
	"files": [
		"dist-types",
		"src",
		"CHANGELOG.md"
	],
	"scripts": {
		"start": "node .",
		"test": "mocha --loader=esmock -- test --reporter spec",
		"test:coverage": "c8 --all --include=src --exclude=src/types --exclude=src/index.js --reporter=cobertura --reporter=text npm run test",
		"test:coverage:html": "c8 --all --include=src --exclude=src/types --exclude=src/index.js --reporter=html --reporter=text npm run test",
		"lint": "npm run lint:check",
		"lint:check": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "npm run format:check",
		"format:check": "prettier --check .",
		"format:fix": "prettier --write .",
		"types": "npm run types:check",
		"types:build": "tsc --build --pretty",
		"types:check": "tsc --pretty",
		"prepare": "npx husky install",
		"prepublishOnly": "npm run types:build",
		"release": "npx semantic-release",
		"reset": "rm -rf .apimockrc && rm -rf .api-mock-runner",
		"check": "npm run lint:check && npm run format:check && npm test"
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@inquirer/prompts": "^3.3.0",
		"@os3/open-api-mocker": "^2.1.0",
		"commander": "^11.1.0"
	},
	"devDependencies": {
		"@esm-bundle/chai": "^4.3.4-fix.0",
		"@os3/commitlint-config": "^0.0.3",
		"@os3/eslint-config": "^0.4.0",
		"@os3/lint-staged-config": "^0.0.5",
		"@os3/prettier-config": "^0.1.1",
		"@os3/semantic-release-config": "^0.1.1",
		"@os3/tsconfig": "^0.0.5",
		"@types/mocha": "^10.0.2",
		"@types/sinon": "^10.0.19",
		"@types/sinon-chai": "^3.2.10",
		"c8": "^8.0.1",
		"eslint-config-prettier": "^9.0.0",
		"esmock": "^2.6.0",
		"husky": "^8.0.0",
		"mocha": "^10.2.0",
		"mock-fs": "^5.2.0",
		"sinon": "^16.1.0",
		"sinon-chai": "^3.7.0"
	}
}
